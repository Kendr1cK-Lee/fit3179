{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Shark Attacks by Species",
    "data": {
      "url": "https://raw.githubusercontent.com/Kendr1cK-Lee/fit3179/refs/heads/main/fit3179_a2/data/Australian-Shark-Incident-Database-Public-Version-Refined.csv"
    },
      "params": [
      {
        "name": "bullshark_selection",
        "value": false,
        "bind": {
          "input": "checkbox",
          "name": "Display Bull Shark"
        }
      },
      {
        "name": "greatwhiteshark_selection",
        "value": false,
        "bind": {
          "input": "checkbox",
          "name": "Display Great White Shark"
        }
      },
      {
        "name": "tigershark_selection",
        "value": false,
        "bind": {
          "input": "checkbox",
          "name": "Display Tiger Shark"
        }
      },
      {
        "name": "wobbegongshark_selection",
        "value": false,
        "bind": {
          "input": "checkbox",
          "name": "Display Wobbegong Shark"
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.SHARK_COMMON_NAME == 'Bull Shark' ? bullshark_selection : true"
        },
      {
        "filter": "datum.SHARK_COMMON_NAME == 'Great White Shark' ? greatwhiteshark_selection : true"
      },
      {
        "filter": "datum.SHARK_COMMON_NAME == 'Tiger Shark' ? tigershark_selection : true"
      },
      {
        "filter": "datum.SHARK_COMMON_NAME == 'Wobbegong Shark' ? wobbegongshark_selection : true"
      }
        ],
    "mark": {
      "type": "area",
      "tooltip": true
    },
    "encoding": {
      "x": {
        "field": "INCIDENT_YEAR",
        "type": "ordinal",
        "title": "Year",
        "axis": {"labelAngle": 0}
      },
      "y": {
        "aggregate": "count",
        "field": "NO_OF_INCIDENTS",
        "type": "quantitative",
        "title": "Number of Incidents",
        "stack": "zero"
      },
      "color": {
        "field": "SHARK_COMMON_NAME",
        "type": "nominal",
        "title": "Shark Species",
        "scale": {
              "domain": ["Bull Shark", "Great White Shark", "Tiger Shark", "Wobbegong Shark"],
              "range": ["#8B4513", "#008080", "#00008B", "#800080"]
            }
            },
      "tooltip": [
        {"field": "INCIDENT_YEAR", "type": "ordinal", "title": "Year"},
        {"field": "SHARK_COMMON_NAME", "type": "nominal", "title": "Shark Species"},
        {"aggregate": "count", "field": "NO_OF_INCIDENTS", "type": "quantitative", "title": "Number of Incidents"}
      ]
    }
  }
  