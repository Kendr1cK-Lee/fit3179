{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Shark Attacks across Australia by Species",
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "bullshark_selection",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Display Bull Shark"
      }
    },
    {
      "name": "greatwhiteshark_selection",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Display Great White Shark"
      }
    },
    {
      "name": "tigershark_selection",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Display Tiger Shark"
      }
    },
    {
      "name": "wobbegongshark_selection",
      "value": false,
      "bind": {
        "input": "checkbox",
        "name": "Display Wobbegong Shark"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Kendr1cK-Lee/fit3179/refs/heads/main/fit3179_a2/js/output_without_graticules.json",
        "format": {"type": "topojson", "feature": "au_eez_pol_april2022"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Kendr1cK-Lee/fit3179/refs/heads/main/fit3179_a2/js/output_without_graticules.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Kendr1cK-Lee/fit3179/refs/heads/main/fit3179_a2/data/Australian-Shark-Incident-Database-Public-Version.csv"
      },
      "transform": [
        {
          "filter": "datum.SHARK_COMMON_NAME == 'Bull Shark' ? bullshark_selection : true"
        },
        {
          "filter": "datum.SHARK_COMMON_NAME == 'Great White Shark' ? greatwhiteshark_selection : true"
        },
        {
          "filter": "datum.SHARK_COMMON_NAME == 'Tiger Shark' ? tigershark_selection : true"
        },
        {
          "filter": "datum.SHARK_COMMON_NAME == 'Wobbegong Shark' ? wobbegongshark_selection : true"
        }
      ],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "LONGITUDE", "type": "quantitative"},
        "latitude": {"field": "LATITUDE", "type": "quantitative"},
        "color": {
          "field": "SHARK_COMMON_NAME",
          "type": "nominal",
          "scale": {
            "domain": ["Bull Shark", "Great White Shark", "Tiger Shark", "Wobbegong Shark"],
            "range": ["#8B4513", "#008080", "#00008B", "#800080"]
          },
          "title": "Shark Species"
        },
        "opacity": {"value": 0.8},
        "tooltip": [
          {"field": "STATE", "type": "nominal", "title": "State"},
          {"field": "LATITUDE", "type": "quantitative", "title": "Latitude"},
          {"field": "LONGITUDE", "type": "quantitative", "title": "Longitude"},
          {"field": "SHARK_COMMON_NAME", "type": "nominal", "title": "Shark Species"},
          {"field": "SHARK_LENGTH_M", "type": "quantitative", "title": "Shark Length (m)"}
        ]
      }
    }
  ]
}
